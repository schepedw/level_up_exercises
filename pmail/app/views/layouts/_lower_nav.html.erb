<div class = "row full-page lower-nav">
  <div class = "small-2 columns">
    <a href ="#" class = "mail red" data-dropdown="pmail-dropdown">Pmail <i class = "fa fa-caret-down"></i></a>
    <ul id = "pmail-dropdown" class = "narrow f-dropdown" data-dropdown-content>
      <li><a href = "#" class = "dd-link">Mail</a> </li>
      <li><a href = "#" class = "dd-link">Contacts </a> </li>
      <li><a href = "#" class = "dd-link">Tasks</a> </li>
    </ul>
  </div>
  <div class = "small-6 columns buttons">
    <a href = "#" class = "has-tip tiny button" data-dropdown="marker-dropdown" data-tooltip title="Select"> 
      <i class = "fa fa-square-o larger opaque "></i>
      <i class = "fa fa-caret-down"></i>
    </a>
    <ul id = "marker-dropdown" class = "narrow f-dropdown" data-dropdown-content>
      <li><a href = "#" class = "dd-link">All </a> </li>
      <li><a href = "#" class = "dd-link">None </a> </li>
